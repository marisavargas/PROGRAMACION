package ejercicio;

import java.util.Scanner;

public class ejercicio10repasoclase {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		
		
		System.out.println("indica una direccion web:");
		String texto = sc.nextLine();
	
			String posicion1 = texto.substring(0 , texto.indexOf("://"));
			System.out.println(posicion1 + "://");
			String posicion2 = texto.substring( texto.indexOf("://") +1, texto.indexOf("."));
			System.out.println( posicion2  );
			String posicion3 = texto.substring(texto.indexOf(".") +1 );
			System.out.println(posicion3 );
			
		}
		
	}


