package ejercicio;

import java.util.Scanner;

public class ejercicio2repasoclase {

	public static void main(String[] args) {
	Scanner scanner = new Scanner(System.in);

	
	System.out.println("Indicame el nombre de  ciudad");
	String cuidadA= scanner.nextLine().trim();  //el ponemos el trim para que quite los espacois por los dos lados 
	String ciudadA = cuidadA;
	
	
	String ciudadB = scanner.nextLine().trim();
	System.out.println("Indicame otro nombre de ciudad");
	
	
	String ciudadC = scanner.nextLine().trim();
	System.out.println("Indicame otro nombre de ciudad");

	
	int longuitudA = ciudadA.length();
	int longuitudB = ciudadB.length();			
	int longuitudC = ciudadC.length();
	
	
		if (longuitudA >=longuitudB && longuitudB >= longuitudC){
			System.out.println( ciudadC);
			System.out.println(ciudadB);
			System.out.println(ciudadA);
		}
		
			else if (longuitudB >= longuitudC && longuitudB >= longuitudC ){
			System.out.println(ciudadB);
			System.out.println(ciudadC);
			System.out.println(ciudadA);
			
		}
		
			else if (longuitudC >= longuitudA && longuitudA>= longuitudB){
			System.out.println( ciudadC);
			System.out.println(ciudadA);
			System.out.println(ciudadB);
		}
		
			else if (longuitudC < longuitudA){
			System.out.println(ciudadC +"  "+ ciudadA);			// tengo que terminarlo
		}
			else if (longuitudC < longuitudB){
			System.out.println(ciudadC + "  " + ciudadB);
			}
			else  {
			System.out.println( ciudadB +"  " +  ciudadA);
		}scanner.close();
		}
			
			
		}
		
		
		
		
		
		
		
	


